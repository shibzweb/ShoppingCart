<section>
    <div class="container mt-5">
        <div class="row">

            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height:28rem">
                    <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="..." style="height:15rem">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.Description}}</p>

                        <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

